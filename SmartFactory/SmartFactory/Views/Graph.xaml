<UserControl x:Class="SmartFactory.Views.Graph"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Height="600" Width="840"  Background="Transparent">

    <Border Style="{StaticResource BorderLine}">

        <Grid>
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--<Label Content="그래프 페이지" FontSize="15" Foreground="White" />-->
                <lvc:PieChart Series="{Binding PieSeries}" Grid.Column="0"/>
                <lvc:CartesianChart Series="{Binding ColumnSeries}" XAxes="{Binding XAxes}" Grid.Column="1" />
                <Label x:Name="LblGraphDate" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
